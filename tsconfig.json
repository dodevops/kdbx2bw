{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "target": "es6",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["index.ts", "lib/**/*.ts"],
  "exclude": ["index.d.ts", "lib/**/*.d.ts"]
}
